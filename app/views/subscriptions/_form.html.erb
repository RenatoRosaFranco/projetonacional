<%= form_for(:subscription, {url: subscriptions_path, method: :post}) do |f| %>
	<div class="field col-md-4">
		<%= f.label :'Nome'	 %>
		<%= f.text_field :name, class: 'form-control', required: 'required',
		placeholder: 'Digite o nome', autocomplete: 'off' %>
	</div>
	<div class="field col-md-4">
		<%= f.label :'E-mail' %>
		<%= f.email_field :email, class: 'form-control', required: 'required',
		placeholder: 'Digite o nome', autocomplete: 'off' %>
	</div>
	<div class="field col-md-4">
		<%= f.label :'Perfil' %><br>
		<%= f.select :profile, %w{Empreendedor Startup Investidor}, {},
		{class: 'form-control' 	} %>
	</div>
	<div class="actions col-md-12 text-center"><br>
		<%= f.submit 'Inscreva-me', class: 'btn btn-primary btn-lg top' %>
	</div>
<% end %>